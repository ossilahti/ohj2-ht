<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="410.0" prefWidth="746.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxMmfinaalit.MMFinaalitGUIController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Tiedosto">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handlePrintWindow" text="Tulosta" />
                  <MenuItem fx:id="exit" mnemonicParsing="false" onAction="#handleExit" onMenuValidation="#handleExit" text="Lopeta" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Muokkaa">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAddFinal" text="Lisää finaali.." />
                  <MenuItem mnemonicParsing="false" onAction="#handleRemoveFinal" text="Poista finaali.." />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Apua">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleHelpWindow" text="Apua" />
                  <MenuItem mnemonicParsing="false" onAction="#handleAboutWindow" text="Tietoja" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <bottom>
            <Button mnemonicParsing="false" onAction="#handleRandomize" onMouseClicked="#handleRandomize" text="Arvo finaali" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Button>
         </bottom>
         <top>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <top>
                  <Label text="Hakeminen" BorderPane.alignment="CENTER" />
               </top>
               <left>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hae:" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="40.0" left="5.0" right="5.0" />
                     </BorderPane.margin>
                  </Text>
               </left>
               <center>
                  <TextField fx:id="searchField" onKeyTyped="#handleHakuehto" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="40.0" right="5.0" />
                     </BorderPane.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </TextField>
               </center>
            </BorderPane>
         </top>
      </BorderPane>
   </left>
   <center>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="vuosiColumn" prefWidth="75.0" text="Vuosi" />
          <TableColumn fx:id="paikkaColumn" prefWidth="75.0" text="Finaalipaikka" />
            <TableColumn fx:id="voittajaColumn" prefWidth="75.0" text="Voittaja" />
            <TableColumn fx:id="hopeajoukkueColumn" prefWidth="75.0" text="Hopeajoukkue" />
            <TableColumn fx:id="lopputulosColumn" prefWidth="75.0" text="Lopputulos" />
            <TableColumn fx:id="katsojatColumn" prefWidth="75.0" text="Katsojamäärä" />
        </columns>
      </TableView>
   </center>
</BorderPane>
